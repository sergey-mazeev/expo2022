extends main/page_default

block head
    title Технологии металлообработки «КАМИ»

block beforeBody
    -bodyClasses.push('front')

block content

    main.main-page
        section.hero
            .hero__video
                video(autoplay="autoplay" loop="loop" muted="muted" poster="./img/content/poster.jpg")
                    source(src="./hero-video.mp4" type="video/mp4")

            .container
                a.hero__tag(href="#map")
                    strong 25-27 октября 2022
                    span ЦВК «ЭКСПОЦЕНТР»
                .hero__bottom-line
                    h1 Технологии <br>металлообработки «КАМИ»
                    .hero__counter.counter
                        .counter__nums
                            .counter__num: span 0
                            .counter__num: span 9
                            .counter__num: span 6
                            .counter__num: span 7
                        .counter__desc
                            span Зарегестрированых<br>посетителей

        section.front-list.front-list_z-top#expo
            .container
                ul
                    li.front-list__item
                        div: img(src="./img/content/icon_area.svg", alt="Площадь экспозиции 3000 м2", width="40" height="38")
                        span <strong>3 000 м<sup>2</sup></strong> - целый <br>павильон под выставку
                    li.front-list__item
                        div: img(src="./img/content/icon_machines.svg", alt="50 работающих станков", width="50" height="50")
                        span <strong>50</strong> работающих <br>станков
                    li.front-list__item
                        div: img(src="./img/content/icon_stock.svg", alt="500 станков готовы к отгрузке", width="45" height="45")
                        span <strong>500</strong> станков <br>готовы к отгрузке

        section.front-text
            .container
                h3.front-text__title Почему нужно посетить?
                ol.front-text__ol.front-text__ol_rows-2.front-text__ol_bb
                    li Покажем самые передовые технологии металлообработки из ЮВА, включая <b>5-и осевые и зубообрабатывающие станки, лазеры мощностью более 12 кВТ</b>
                    li Высокоэффективные <b>инженерные решения</b>, подобранные технологами
                    li <b>Расширенная гарантия</b> при приобретении станков во время мероприятия<br><i>(на определенные виды станков до 36 мес.)</i>
                    li <b>Станки в работе</b>, тестовые детали по вашим чертежам для проверки качества
                h4.front-text__subtitle Зарегистрируйся сейчас и получи:
                ol.front-text__ol.front-text__ol_rows-2
                    li <strong>Бесплатный</strong> урок по HCNC в учебном классе ЦТО КАМИ
                    li <strong>Скидка 50%</strong> на шефмонтаж при покупке станка с выставки
                    li <strong>Бесплатный</strong> вход во все павильоны выставки
                    li <strong>Скидка 50%</strong> на инструмент МО

                a.front-text__action.btn.btn_skew(href="#"): span Зарегистрироваться
                .front-text__desc Также для всех наших посетителей будет предусмотрен ланч в дни проведения выставки и шоу программа.


        section.front-block#plan
            .container
                h3.front-block__title План выставки
                .front-block__content
                    .plan
                        .plan__title Выберете станок из списка, и он отобразится на плане
                        .plan__list
                            ol
                                //- .plan__list-item-active
                                li.js-plan-list-item(data-item-id="9645047") Линейка 5-ти ос. обр. центров IMU-5X
                                li Вертикально-токарный станок IVL-500
                                li Портальный фрез.обр.центр KPM1525
                                li Горизонтально-фрез. станок KHM80TS
                                li Трубогиб с ЧПУ IB-CNC 25MULTIBEND
                                li Лазер. компл. HLF1530 12kW YAWEI
                                li Панелегиб Yawei FBA 2016
                                li C400K(ITX408)HNC808D/HCNC DONGBU
                                li KMT 3015 L1-3000W//ChangTai
                                li TCM-32SII c ЧПУ Fanuc 0i-TF Plus
                                li JSL-20AB+barfeeder 3,2м/TWT JINNFA
                                li CUT-430CHA Автомат. ленточнопил.
                                li Y3132CNC7 SIEMENS(UHM-320CNC7)
                                li SPACE 540 Вертикальный ОЦ
                                li TG45 (GT-45)+Pragati 63/8T servo turret
                        a.plan__button.btn.btn_ghost(href="#")
